<%- include ../Partials/header.ejs%> <!-- Include the header partial for consistent header section across pages -->
<%- include ../Partials/main_nav.ejs%> <!-- Include the main navigation partial for the navigation bar -->

<!-- Main content container -->
<div class="container"></div>
    <div class="row">
        <!-- Column centered on the page -->
        <div class="offset-md-3 col-md-6">
            <!-- Display the title dynamically -->
            <h1><%= title %></h1>

            <!-- Form to add/edit an assignment -->
            <form class="form" method="POST">
                
                <!-- Form group for "Name of Assignment" input -->
                <div class="form-group">
                    <label for="Name">Name of Assignment</label> <!-- Label for the assignment title -->
                    <input type="text" class="form-control" id="Name" placeholder="Enter the assignment Title" name="Name" required> <!-- Input field for assignment title -->
                </div>
                
                <!-- Form group for "Name of Subject" input -->
                <div class="form-group">
                    <label for="Teacher">Name of Subject</label> <!-- Label for the subject name -->
                    <input type="text" class="form-control" id="Subject" placeholder="Enter subject" name="Subject" required> <!-- Input field for subject name -->
                </div>
                
                <!-- Form group for "Topic" input -->
                <div class="form-group">
                    <label for="Subject">Topic</label> <!-- Label for the topic of the assignment -->
                    <input type="text" class="form-control" id="Topic" placeholder="Enter the Topic" name="Topic" required> <!-- Input field for topic -->
                </div>
                
                <!-- Form group for "Class" input (description of the class) -->
                <div class="form-group">
                    <label for="Description">Class</label> <!-- Label for the class description -->
                    <textarea type="text" class="form-control" id="Class" placeholder="Enter the Class" name="Description" required></textarea> <!-- Textarea for class -->
                </div>

                <!-- Form group for "Due Date" input -->
                <div class="form-group">
                    <label for="timeTextField">Due Date</label> <!-- Label for the due date -->
                    <input type="datetime-local" class="form-control" id="timeTextField" placeholder="Enter the time of when it's due" name="Due"> <!-- Input field for due date -->
                </div>

                <!-- Submit button to send the form data -->
                <button class="btn btn-primary" type="submit">Submit
                    <i class="fas fa-edit"></i></button> <!-- Submit button with an edit icon -->

                <!-- Cancel button to go back to the previous page -->
                <button class="btn btn-warning" type="button" onclick="window.history.back()">Cancel
                    <i class="fas fa-undo"></i></button> <!-- Cancel button with undo icon, triggering window history back -->
            </form>
        </div>
    </div>
</div>

<%- include ../Partials/footer.ejs%> <!-- Include the footer partial for consistent footer section across pages -->