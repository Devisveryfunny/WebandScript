<%- include ../Partials/header.ejs%> <!-- Include the header partial for consistent header section across pages -->
<%- include ../Partials/main_nav.ejs%> <!-- Include the main navigation partial for the navigation bar -->

<main class="container"> <!-- Main content container -->
    <div class="row"> <!-- Start of the row for the content -->
        <div class="offset-md-1 col-md-10"> <!-- Column to center the content with padding -->
            <!-- Display the dynamic page title -->
            <h1><%= title %></h1> 
            <br>
            <!-- Button to add a new assignment, links to the add assignment form page -->
            <a href="/assignmentslist/add" class="btn btn-primary" role="button">
                <i class="fas fa-plus-circle"></i> Add assignment <!-- Button with an icon for adding a new assignment -->
            </a>

            <!-- Table displaying the list of assignments -->
            <table class="table table-bordered table-striped table-hover">
                <!-- Table header -->
                <tr class="d-flex">
                    <th class="text-center col-2">Name</th> <!-- Column header for assignment name -->
                    <th class="text-center col-2">Subject</th> <!-- Column header for subject -->
                    <th class="text-center col-1">Topic</th> <!-- Column header for topic -->
                    <th class="col-4">Class</th> <!-- Column header for class description -->
                    <th class="text-center col-1">Due</th> <!-- Column header for due date -->
                </tr>
                <!-- Loop through each assignment in the AssignmentList array and display in table rows -->
                <% for(let count=0;count<AssignmentList.length;count++) { %>
                <tr class="d-flex">
                    <!-- Display assignment name in the table row -->
                    <td class="text-center col-2"><%= AssignmentList[count].Name %></td>
                    <!-- Display assignment subject in the table row -->
                    <td class="text-center col-2"><%= AssignmentList[count].Subject %></td>
                    <!-- Display assignment topic in the table row -->
                    <td class="text-center col-1"><%=AssignmentList[count].Topic%></td>
                    <!-- Display class description in the table row -->
                    <td class="col-4"><%= AssignmentList[count].Class %> </td>
                    <!-- Display assignment due date in the table row -->
                    <td class="text-center col-1"><%= AssignmentList[count].Due %></td>
                    <!-- Button to edit the assignment, links to the edit page for the specific assignment -->
                    <td class="text-center col-1">
                        <a href="/assignmentslist/edit/<%= AssignmentList[count]._id%>"
                            class="btn btn-primary btn-sm">
                            <i class="fas fa-pencil-alt"></i>Edit <!-- Edit button with a pencil icon -->
                        </a>
                    </td>
                    <!-- Button to delete the assignment, links to the delete action for the specific assignment -->
                    <td class="text-center col-1">
                        <a href="/assignmentslist/delete/<%= AssignmentList[count]._id%>"
                            class="btn btn-danger btn-sm">
                            <i class="fas fa-trash-alt"></i>Delete <!-- Delete button with a trash icon -->
                        </a>
                    </td>
                </tr>    
                <%} %> <!-- End of loop that goes through all assignments -->
            </table> <!-- End of the table -->
        </div> <!-- End of the column -->
    </div> <!-- End of the row -->
</main> <!-- End of the main content section -->

<%- include ../Partials/footer.ejs%> <!-- Include the footer partial for consistent footer section across pages -->